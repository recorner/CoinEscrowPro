# Environment Variables
NODE_ENV=development
PORT=3000

# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=CoinEscrowProBot
WEBHOOK_URL=https://yourdomain.com/webhook

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/coin_escrow_pro?schema=public"

# BlockCypher API Configuration
BLOCKCYPHER_API_KEY=your_blockcypher_api_key
BLOCKCYPHER_BASE_URL=https://api.blockcypher.com/v1

# GetBlock.io API Configuration (Alternative)
GETBLOCK_API_KEY=your_getblock_api_key
GETBLOCK_BASE_URL=https://btc.getblock.io/mainnet

# Security & Encryption
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_32_char_encryption_key_here

# Escrow Configuration
DEFAULT_TIMEOUT_MINUTES=60
REQUIRED_CONFIRMATIONS_BTC=1
REQUIRED_CONFIRMATIONS_LTC=1
DEFAULT_FEE_PERCENTAGE=0.5

# Admin Configuration
ADMIN_USER_IDS=123456789,987654321
SUPER_ADMIN_ID=123456789

# Vouch Channel/Group Configuration
VOUCH_CHANNEL_ID=-1001234567890
STATS_CHANNEL_ID=-1001234567891

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Redis Configuration (for session management)
REDIS_URL=redis://localhost:6379

# Webhook Security
WEBHOOK_SECRET=your_webhook_secret_here
