{
  "name": "coin-escrow-pro-bot",
  "version": "1.0.0",
  "description": "Fully automated crypto escrow bot for Telegram with BTC and LTC support",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "setup:mtproto": "node scripts/setup-mtproto.js",
    "docker:build": "docker build -t coin-escrow-pro .",
    "docker:run": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "telegram",
    "bot",
    "escrow",
    "bitcoin",
    "litecoin",
    "crypto",
    "p2p"
  ],
  "author": "CoinEscrowPro Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "bitcoinjs-lib": "^6.1.5",
    "dotenv": "^16.3.1",
    "ecpair": "^3.0.0",
    "grammy": "^1.21.1",
    "input": "^1.0.1",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "qrcode": "^1.5.3",
    "telegram": "^2.22.2",
    "tiny-secp256k1": "^2.2.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
